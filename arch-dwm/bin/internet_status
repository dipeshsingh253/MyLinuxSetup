#!/bin/bash
#Function to check internet connectivity
check_internet() {
  ping -c 1 google.com &> /dev/null
  return $?
}

# Check internet connectivity
check_internet

# Check the exit status of the ping command
if [ $? -eq 0 ]; then
  # Internet is available, display a happy emoji
  echo -e " 󰖩"  # 󰖩
else
  # No internet, display a nerd emoji
  echo -e " 󰖪"  # 󰖪
fi

